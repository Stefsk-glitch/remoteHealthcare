<Window x:Class="Doctor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Doctor"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Label Content="Username :" HorizontalAlignment="Right" Margin="0,49,698,0" VerticalAlignment="Top"/>
        <TextBox Name="tbUser" HorizontalAlignment="Left" Margin="33,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" KeyDown="LoginBoxKeyHandler"/>
        <Label Content="Password :" HorizontalAlignment="Left" Margin="33,119,0,0" VerticalAlignment="Top"/>
        <PasswordBox Name="tbPass" HorizontalAlignment="Left" Margin="33,164,0,0" VerticalAlignment="Top" Width="186" Height="18" PasswordChar="*" KeyDown="LoginBoxKeyHandler"/>
        <Button Content="Log in" HorizontalAlignment="Left" Margin="33,210,0,0" VerticalAlignment="Top" Click="BtnOnLoginClick"/>
    </Grid>
</Window>
